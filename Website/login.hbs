<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Kalam:wght@400&display=swap" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</head>
<body>

<nav class="navbar">
  <a href="/login">Login</a>
  <a href="/register">Register</a>
</nav>

<div class="container">
  <div>
    <h2>Login</h2>
    <form id='login'>
      <input type="text" name = "username"id="username" placeholder="Username" required>
      <input type="password" name = "password" id="password" placeholder="Password" required>
      <button type="submit" id="sign-button">Sign in</button>
    </form>
  </div>
</div>

<script type="text/javascript" defer>
	  $(document).ready(function () {
		    // Use jQuery to attach the click event listener
		    $('#sign-button').click(function (e) {
		      e.preventDefault();

		      const user = {
			username: $('#username').val(),
			password: $('#password').val()
		      };
		      alert(JSON.stringify(user));

		      $.ajax({
			url: '/login',
			type: 'POST',
			contentType: 'application/json; charset=utf-8',
			data: JSON.stringify(user),
			success: function (response) {
			  const parsedData = JSON.parse(JSON.stringify(response));
			  console.log('Parsed response data:', parsedData);

			  alert(parsedData);

			  if (parsedData.startsWith("Welcome")) {
			    window.location.href = '/';
			  }
			},
			error: function (error) {
			  alert(JSON.stringify(error));
			  console.error(error);
			}
		      });
		    });

		    // Use jQuery to attach the click event listener
		    $('#login').submit(function (e) {
		      e.preventDefault();
		    });
	  });
</script>
</body>
</html>
